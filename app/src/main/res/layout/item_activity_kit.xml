<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_activity_kit_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:id="@+id/tv_item_activity_kit_sport"
            android:text="----"
            android:textColor="@color/color_font_black_weight"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_14"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_14"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/size_10"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_item_activity_kit_state"
            android:text="解锁成功"
            android:textColor="#FFFD4C4F"
            android:textSize="@dimen/font_14"
            android:layout_marginRight="@dimen/size_10"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_item_activity_kit_lock"
            android:background="@drawable/icon_kit_lock"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size_14"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20" />

    </LinearLayout>

    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>