<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_154"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginBottom="@dimen/size_3"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/size_5"
            app:cardElevation="@dimen/size_3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_item_signup_package"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_120"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_item_signup_package_name"
                    style="@style/commonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/size_14"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="--套餐" />

                <TextView
                    android:id="@+id/tv_item_signup_package_extends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/size_14"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/pay_package_detail_collapse"
                    android:textColor="#FF85B4EB" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RadioButton
            android:id="@+id/rb_item_signup_package"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_14" />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_item_signup_package_extends"
        android:layout_width="match_parent"
        android:layout_marginTop="-3dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_54"
        android:scaleType="fitXY" />

</LinearLayout>