<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_punch_calendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50">

    <ImageView
        android:id="@+id/img_item_punch_calendar"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_28" />

    <ImageView
        android:id="@+id/img_item_punch_calendar_left"
        android:layout_toLeftOf="@+id/tv_item_punch_calendar"
        android:layout_centerVertical="true"
        android:layout_marginRight="-28dp"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_28" />

    <ImageView
        android:id="@+id/img_item_punch_calendar_right"
        android:layout_toRightOf="@+id/tv_item_punch_calendar"
        android:layout_marginLeft="-28dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_28" />

    <TextView
        android:id="@+id/tv_item_punch_calendar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_item_punch_calendar_point"
        android:background="@drawable/shape_calendar_point_current"
        android:layout_below="@+id/tv_item_punch_calendar"
        android:layout_marginTop="@dimen/size_4"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/size_6"
        android:layout_height="@dimen/size_6" />

</RelativeLayout>