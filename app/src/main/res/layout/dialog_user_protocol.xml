<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_dialog_back"
    android:orientation="vertical"
    android:layout_width="@dimen/size_248"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/color_font_black"
        android:textStyle="bold"
        android:text="用户协议"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_15"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_dialog_user_protocol_content"
        android:text=""
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginBottom="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#FFF2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_42">

        <TextView
            android:id="@+id/tv_dialog_user_protocol_disagree"
            android:textColor="@color/color_font_black"
            android:text="不同意"
            android:textSize="@dimen/font_14"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center_vertical"
            android:background="#FFF2F2F2"
            android:layout_width="@dimen/size_1"
            android:layout_height="@dimen/size_24"/>

        <TextView
            android:id="@+id/tv_dialog_user_protocol_agree"
            android:text="同意"
            android:textStyle="bold"
            android:textSize="@dimen/font_14"
            android:textColor="#FFFF1D1D"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>