<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_68">

    <TextView
        android:id="@+id/tv_item_activity_recruit_rank_pos"
        android:text="-"
        android:textColor="@color/color_font_black_weight"
        android:textSize="@dimen/font_12"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/size_9"
        android:layout_width="@dimen/size_30"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_item_activity_recruit_rank_pos"
        android:layout_marginLeft="@dimen/size_12"
        android:background="@drawable/icon_gold_medal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_item_activity_recruit_rank_logo"
        android:layout_marginLeft="@dimen/size_48"
        android:layout_width="@dimen/size_48"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_10"
        android:layout_height="@dimen/size_48" />

    <LinearLayout
        android:layout_toLeftOf="@+id/tv_item_activity_recruit_rank_count"
        android:layout_toRightOf="@+id/img_item_activity_recruit_rank_logo"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="- -"
            android:id="@+id/tv_item_activity_recruit_rank_name"
            android:textSize="@dimen/font_14"
            android:textColor="#FF000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_activity_recruit_rank_status"
            android:textSize="@dimen/font_12"
            android:textColor="#FF000000"
            android:maxLines="1"
            android:text="第 - 名"
            android:layout_marginTop="@dimen/size_2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_activity_recruit_rank_count"
        android:textSize="@dimen/font_14"
        android:textColor="#FF000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_14"
        android:text="45人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/color_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

</RelativeLayout>