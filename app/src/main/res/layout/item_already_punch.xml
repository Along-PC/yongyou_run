<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70">

    <ImageView
        android:id="@+id/img_item_already_punch_head"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_6"
        android:background="@drawable/icon_head" />

    <TextView
        android:id="@+id/tv_item_already_punch_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_16"
        android:layout_toRightOf="@+id/img_item_already_punch_head"
        android:layout_toLeftOf="@+id/tv_item_already_punch_distance"
        android:gravity="center_vertical"
        android:text="- -"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tv_item_already_punch_insist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20"
        android:layout_below="@+id/tv_item_already_punch_name"
        android:layout_toRightOf="@+id/img_item_already_punch_head"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/tv_item_already_punch_distance"
        android:text="已坚持--天"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tv_item_already_punch_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_14"
        android:text="--km"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

</RelativeLayout>