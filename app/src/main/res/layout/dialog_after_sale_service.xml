<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_dialog_back"
    android:layout_width="@dimen/size_287"
    android:paddingBottom="@dimen/size_20"
    android:layout_height="wrap_content">

    <TextView
        style="@style/commonFont"
        android:textStyle="bold"
        android:text="售后服务"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />

    <TextView
        android:id="@+id/tv_sale_service_content"
        android:text="1、直接拨打售后电话，不更换尺码只负责售后质量问题"
        style="@style/commonFont"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_20"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/size_216"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sale_service_phone"
        android:text="@string/phone_after_sale"
        android:layout_marginTop="@dimen/size_10"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF4A90E2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_sale_service_qrcode"
        android:layout_marginTop="@dimen/size_10"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_holder"
        android:layout_width="@dimen/size_101"
        android:layout_height="@dimen/size_101" />


</LinearLayout>