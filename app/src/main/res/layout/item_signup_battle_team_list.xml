<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_92"
    android:layout_marginLeft="@dimen/size_4"
    android:layout_marginRight="@dimen/size_4"
    android:layout_marginTop="@dimen/size_5"
    android:layout_marginBottom="@dimen/size_15"
    android:translationZ="@dimen/size_2"
    app:cardElevation="@dimen/size_2">

    <RelativeLayout
        android:id="@+id/rl_item_battle_team_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_battle_team_list"
            android:layout_width="@dimen/size_72"
            android:layout_height="@dimen/size_72"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginRight="@dimen/size_10" />

        <ImageView
            android:id="@+id/img_item_battle_team_list_verify"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_alignTop="@+id/img_item_battle_team_list"
            android:background="@drawable/icon_authenticate"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />

        <TextView
            android:id="@+id/tv_item_battle_team_list_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_14"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_toRightOf="@+id/img_item_battle_team_list"
            android:gravity="center_vertical"
            android:text="闪电3k女神团"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_font_black_weight"
            android:textStyle="bold"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:id="@+id/ll_item_battle_team_list"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_17"
            android:layout_below="@+id/tv_item_battle_team_list_name"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_toRightOf="@+id/img_item_battle_team_list">

            <TextView
                android:id="@+id/tv_item_battle_team_list_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="@dimen/size_24"
                android:text="--"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:background="#FFEEEEEE" />

            <TextView
                android:id="@+id/tv_item_battle_team_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="@dimen/size_24"
                android:text="-km"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:background="#FFEEEEEE" />

            <TextView
                android:id="@+id/tv_item_battle_team_list_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="@dimen/size_24"
                android:text="--人"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_battle_team_list_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_17"
            android:layout_below="@+id/ll_item_battle_team_list"
            android:layout_marginRight="@dimen/size_20"
            android:layout_toRightOf="@+id/img_item_battle_team_list"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="队长：每周放风两天"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_item_battle_team_list_signup"
            android:layout_width="@dimen/size_72"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_14"
            android:background="@drawable/selector_battle_team_signup_status"
            android:gravity="center"
            android:text="报名战队"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>