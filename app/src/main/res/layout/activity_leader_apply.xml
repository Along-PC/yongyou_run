<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.home.LeaderApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_44"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_4"
            android:gravity="center_vertical"
            android:text="队伍预计人数"
            android:textColor="@color/color_font_black_weight"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_activity_leader_apply_member_count"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/shape_common_input_back"
            android:hint="请填写数字"
            android:inputType="number"
            android:maxLength="5"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:textColorHint="#FFCCCCCC"
            android:textSize="@dimen/font_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_4"
            android:gravity="center_vertical"
            android:text="推荐人手机号"
            android:textColor="@color/color_font_black_weight"
            android:textSize="@dimen/font_14"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_activity_leader_apply_referrer_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/shape_common_input_back"
            android:hint="推荐人手机号码(选填)"
            android:paddingLeft="@dimen/size_12"
            android:paddingRight="@dimen/size_12"
            android:inputType="number"
            android:textColorHint="#FFCCCCCC"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_activity_leader_apply_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_create_dynamic_submit"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_16" />

</RelativeLayout>