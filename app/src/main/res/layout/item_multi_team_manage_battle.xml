<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_141"
    android:layout_marginLeft="@dimen/size_14"
    android:layout_marginTop="@dimen/size_5"
    android:layout_marginRight="@dimen/size_14"
    android:layout_marginBottom="@dimen/size_5"
    android:translationZ="@dimen/size_2"
    app:cardElevation="@dimen/size_2">

    <RelativeLayout
        android:id="@+id/rl_item_multi_team_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_multi_team_logo"
            android:layout_width="@dimen/size_72"
            android:layout_height="@dimen/size_72"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10" />

        <ImageView
            android:background="@drawable/icon_authenticate"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24" />

        <TextView
            android:id="@+id/tv_item_multi_team_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:layout_marginTop="@dimen/size_27"
            android:layout_toLeftOf="@+id/tv_item_multi_team_homepage"
            android:layout_toRightOf="@+id/img_item_multi_team_logo"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="闪电3k女神团"
            android:textColor="@color/color_font_black_weight"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_multi_team_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_17"
            android:layout_below="@+id/tv_item_multi_team_name"
            android:layout_marginTop="@dimen/size_5"
            android:layout_toLeftOf="@+id/tv_item_multi_team_homepage"
            android:layout_toRightOf="@+id/img_item_multi_team_logo"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:visibility="gone"
            android:text="-- | -km | --人"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_12" />

        <LinearLayout
            android:layout_toLeftOf="@+id/tv_item_multi_team_homepage"
            android:layout_toRightOf="@+id/img_item_multi_team_logo"
            android:layout_marginTop="@dimen/size_5"
            android:layout_below="@+id/tv_item_multi_team_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_17">

            <TextView
                android:id="@+id/tv_item_multi_team_city"
                android:text="--"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="#FFEEEEEE"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_item_multi_team_distance"
                android:text="-km"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <View
                android:background="#FFEEEEEE"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_item_multi_team_counts"
                android:text="--人"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_item_multi_team_homepage"
            android:layout_width="@dimen/size_72"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_34"
            android:layout_marginRight="@dimen/size_14"
            android:background="@drawable/shape_multi_team_border"
            android:gravity="center"
            android:text="战队主页"
            android:textSize="@dimen/font_12"
            android:textColor="#FFFF1D1D" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_marginRight="@dimen/size_14"
            android:layout_marginBottom="@dimen/size_48"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_item_multi_team_share"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/size_37"
            android:layout_marginBottom="@dimen/size_10"
            android:background="@drawable/shape_multi_team_button"
            android:gravity="center"
            android:text="分享链接"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_11" />

        <TextView
            android:id="@+id/tv_item_multi_team_invite"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/size_37"
            android:layout_marginBottom="@dimen/size_10"
            android:background="@drawable/shape_multi_team_button"
            android:gravity="center"
            android:text="分享邀请卡"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_11" />

    </RelativeLayout>

</android.support.v7.widget.CardView>