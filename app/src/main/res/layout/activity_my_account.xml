<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/size_14"
    android:paddingRight="@dimen/size_14"
    android:orientation="vertical"
    tools:context=".ui.activities.mine.MyAccountActivity">

    <RelativeLayout
        android:background="@drawable/shape_bonus_withdrawal"
        android:layout_marginTop="@dimen/size_27"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_185">

        <TextView
            android:text="我的余额"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20" />

        <TextView
            android:id="@+id/tv_activity_my_account_overage"
            android:textColor="@color/color_white"
            android:text="¥300.00"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_50"
            android:textSize="@dimen/font_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#FF76242E"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_20"
            android:text="1.优先原路退回，再通过公众号红包（需自己点开领取），每笔限提1-200元，每天限提10次。\n2.余额可用于抵扣报名费。"
            android:layout_width="@dimen/size_307"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activity_my_account_withdraw"
            android:text="提现"
            android:background="@drawable/shape_my_account_withdraw"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginTop="@dimen/size_53"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_30" />

    </RelativeLayout>

    <TextView
        android:text="余额明细"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_activity_my_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>