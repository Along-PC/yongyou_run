<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:layout_height="@dimen/size_44">

    <EditText
        android:id="@+id/edt_dialog_comment"
        android:hint="写评论"
        android:textColorHint="@color/color_font_gray"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:paddingLeft="@dimen/size_14"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    
    <TextView
        android:id="@+id/tv_dialog_comment"
        android:layout_width="@dimen/size_90"
        android:textColor="@color/color_white"
        android:background="@color/color_font_red"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        android:text="发送"
        android:layout_height="match_parent" />

</LinearLayout>