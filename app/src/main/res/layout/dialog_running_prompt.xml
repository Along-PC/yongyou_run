<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_248"
    android:background="@drawable/shape_dialog_back"
    android:layout_height="@dimen/size_237">

    <TextView
        android:text="提示"
        android:textStyle="bold"
        android:textSize="@dimen/font_13"
        android:textColor="@color/color_font_black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_80"
        android:text="为了软件定位可以正常使用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_font_black"
        android:textStyle="bold"
        android:text="跑步过程中请勿锁屏"
        android:layout_marginTop="@dimen/size_120"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/bt_dialog_runnning_prompt"
        android:text="我知道了"
        android:background="@drawable/shape_dialog_running_prompt"
        android:textColor="@color/color_white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_30"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/size_120"
        android:layout_height="@dimen/size_36" />

</RelativeLayout>