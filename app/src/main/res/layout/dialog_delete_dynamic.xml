<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_287"
    android:background="@drawable/shape_dialog_back"
    android:layout_height="@dimen/size_159">

    <TextView
        android:id="@+id/tv_dialog_delete_dynamic_title"
        android:text="提示"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_30"
        android:textSize="@dimen/font_16"
        android:textColor="#FF000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/tv_dialog_delete_dynamic_title"
        android:layout_centerHorizontal="true"
        android:text="确认删除这条动态吗?"
        android:textSize="@dimen/font_18"
        android:textColor="#FF000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_above="@+id/ll_dialog_delete_dynamic"
        android:background="#FFDDDDDD"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

    <LinearLayout
        android:id="@+id/ll_dialog_delete_dynamic"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_49">

        <TextView
            android:id="@+id/tv_dialog_delete_dynamic_cancel"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:textColor="#FF4A90E2"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />
        <View
            android:background="#FFDDDDDD"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/size_1"
            android:layout_height="@dimen/size_44"/>

        <TextView
            android:id="@+id/tv_dialog_delete_dynamic_certain"
            android:text="确认"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:textColor="#FF4A90E2"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>