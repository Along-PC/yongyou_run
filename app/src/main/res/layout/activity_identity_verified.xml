<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.mine.IdentityVerifiedActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_4"
        android:gravity="center_vertical"
        android:text="姓名"
        android:textColor="@color/color_font_black_weight"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_activity_identity_verified_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:background="@drawable/shape_person_info_edit"
        android:ellipsize="end"
        android:maxLength="14"
        android:inputType="text"
        android:hint="请输入本人身份证姓名"
        android:maxLines="1"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:textColor="@color/color_font_black"
        android:textColorHint="@color/color_font_gray_lite"
        android:textSize="@dimen/font_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_4"
        android:gravity="center_vertical"
        android:text="身份证号"
        android:textColor="@color/color_font_black_weight"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_activity_identity_verified_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:background="@drawable/shape_person_info_edit"
        android:ellipsize="end"
        android:hint="请输入本人身份证号"
        android:maxLines="1"
        android:maxLength="18"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:textColor="@color/color_font_black"
        android:textColorHint="@color/color_font_gray_lite"
        android:textSize="@dimen/font_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_4"
        android:gravity="center_vertical"
        android:text="输入手机号"
        android:textColor="@color/color_font_black_weight"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_activity_identity_verified_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:background="@drawable/shape_person_info_edit"
        android:ellipsize="end"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:textColor="@color/color_font_black"
        android:textColorHint="@color/color_font_gray_lite"
        android:textSize="@dimen/font_14" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_activity_identity_verified_check_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="@drawable/shape_person_info_edit"
            android:ellipsize="end"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_14"
            android:paddingRight="@dimen/size_14"
            android:textColor="@color/color_font_black"
            android:textColorHint="@color/color_font_gray_lite"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_activity_identity_verified_check_code"
            android:textSize="@dimen/font_14"
            android:textColor="#FF4A90E2"
            android:text="获取验证码"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_activity_identity_verified_help"
        android:text="无法验证身份？"
        android:textColor="@color/color_font_gray_lite"
        android:textSize="@dimen/font_12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_activity_identity_verified_confirm"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_16"
        android:background="@drawable/shape_create_dynamic_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46" />

</LinearLayout>