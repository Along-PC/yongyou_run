<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_84">

    <TextView
        android:id="@+id/tv_item_already_withdrawal_account"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_font_black"
        android:gravity="center_vertical"
        android:text="***"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_11"
        android:layout_toLeftOf="@+id/tv_item_already_withdrawal_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20" />

    <TextView
        android:id="@+id/tv_item_already_withdrawal_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_17"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_35"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="- - -"
        android:textColor="@color/color_font_gray_lite"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/tv_item_already_withdrawal_date"
        android:textSize="@dimen/font_12"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/size_14"
        android:text="****-**-**"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_item_already_withdrawal_count"
        android:layout_marginBottom="@dimen/size_10"
        android:textColor="@color/color_font_gray_lite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_17" />

    <TextView
        android:id="@+id/tv_item_already_withdrawal_count"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_font_black"
        android:gravity="center_vertical"
        android:text="Â¥*00.00 "
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />

    <View
        android:background="#f2f2f2"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

</RelativeLayout>