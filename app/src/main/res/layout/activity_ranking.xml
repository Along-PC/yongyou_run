<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.home.TeamRankingActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/indicator_activity_ranking"
            android:layout_width="@dimen/size_0"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/size_20"
            android:layout_height="@dimen/size_44">

        </net.lucode.hackware.magicindicator.MagicIndicator>

        <LinearLayout
            android:id="@+id/ll_activity_ranking_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_activity_ranking_order"
                android:text="排序"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_14"
                android:layout_marginRight="@dimen/size_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_activity_ranking_order"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/size_20"
                android:background="@drawable/selector_team_ranking_order"
                android:layout_marginRight="@dimen/size_18"
                android:layout_height="@dimen/size_20" />

        </LinearLayout>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>



</LinearLayout>