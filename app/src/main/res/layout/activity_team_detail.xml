<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.home.TeamDetailActivity">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_activity_team_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_120">

                    <ImageView
                        android:id="@+id/img_team_detail_teamback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#70000000" />

                    <ImageView
                        android:id="@+id/img_team_detail_teamlogo"
                        android:layout_width="@dimen/size_72"
                        android:layout_height="@dimen/size_72"
                        android:layout_marginLeft="@dimen/size_14"
                        android:layout_marginTop="@dimen/size_20" />

                    <TextView
                        android:id="@+id/tv_team_detail_teamName"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_22"
                        android:layout_marginLeft="@dimen/size_9"
                        android:layout_marginTop="@dimen/size_23"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_toRightOf="@+id/img_team_detail_teamlogo"
                        android:gravity="center_vertical"
                        android:text="第-届百日跑--战队"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:id="@+id/tv_team_detail_getCard"
                        android:layout_width="@dimen/size_110"
                        android:layout_height="@dimen/size_34"
                        android:layout_below="@+id/tv_team_detail_teamName"
                        android:layout_marginLeft="@dimen/size_8"
                        android:layout_toRightOf="@+id/img_team_detail_teamlogo"
                        android:background="@drawable/shape_team_detail_invite"
                        android:gravity="center"
                        android:text="获取邀请卡"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_14" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/shape_team_detail_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_36"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_10"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingRight="@dimen/size_14">

                        <ImageView
                            android:id="@+id/img_team_detail_head"
                            android:layout_width="@dimen/size_36"
                            android:layout_height="@dimen/size_36"
                            android:layout_marginRight="@dimen/size_10" />

                        <TextView
                            android:id="@+id/tv_team_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:layout_marginRight="@dimen/size_10"
                            android:maxLines="1"
                            android:text="队长：- - -"
                            android:textColor="#FF101010"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_team_detail_manage"
                            android:gravity="center"
                            android:text="队伍管理"
                            android:visibility="gone"
                            android:background="@drawable/shape_team_manage_withdraw"
                            android:textSize="@dimen/font_14"
                            android:textColor="#FFFF1D1D"
                            android:layout_marginRight="@dimen/size_14"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/size_96"
                            android:layout_height="@dimen/size_32" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:layout_marginLeft="@dimen/size_14"
                        android:layout_marginRight="@dimen/size_14"
                        android:background="@color/color_line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_22"
                        android:layout_marginTop="@dimen/size_13"
                        android:layout_marginBottom="@dimen/size_8"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingRight="@dimen/size_14"
                        android:text="战队介绍"
                        android:textColor="#FF101010"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_team_detail_achievement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_10"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingRight="@dimen/size_14"
                        android:text="-   -   -   -   -"
                        android:textColor="@color/color_font_gray"
                        android:textSize="@dimen/font_14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:layout_marginLeft="@dimen/size_14"
                        android:layout_marginRight="@dimen/size_14"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:id="@+id/ll_team_detail_memeber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingRight="@dimen/size_14">

                        <TextView
                            android:id="@+id/tv_team_detail_memeber_count"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_22"
                            android:layout_marginTop="@dimen/size_13"
                            android:layout_marginBottom="@dimen/size_8"
                            android:gravity="center_vertical"
                            android:text="战队成员"
                            android:textColor="#FF101010"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginBottom="@dimen/size_14">

                            <com.tourye.run.views.FlowHeadLayout
                                android:id="@+id/flow_team_detail_memeber"
                                android:layout_width="@dimen/size_120"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </com.tourye.run.views.FlowHeadLayout>

                            <ImageView
                                android:layout_width="@dimen/size_24"
                                android:layout_height="@dimen/size_24"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/icon_arrow_right" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_team_detail_qrcode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:id="@+id/ll_team_detail_qrcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_13"
                        android:layout_marginBottom="@dimen/size_13"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingRight="@dimen/size_14">

                        <LinearLayout
                            android:layout_width="@dimen/size_0"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/size_20"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_team_detail_qrcode_battle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_164"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/size_10"
                                android:text="扫码进入战队群"
                                android:textColor="#FF101010"
                                android:textSize="@dimen/font_16" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/size_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_team_detail_qrcode_leader"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_164"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/size_10"
                                android:text="扫码添加队长好友"
                                android:textColor="#FF101010"
                                android:textSize="@dimen/font_16" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_activity_team_detail_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <net.lucode.hackware.magicindicator.MagicIndicator
                            android:id="@+id/indicator_activity_team_detail"
                            android:layout_width="match_parent"
                            android:background="#FFFAFAFA"
                            android:layout_height="@dimen/size_44">

                        </net.lucode.hackware.magicindicator.MagicIndicator>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_detail_rate_rank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_detail_total_distance_rank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_detail_today_distance_rank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                        <TextView
                            android:id="@+id/tv_activity_team_detail_more"
                            android:layout_width="@dimen/size_112"
                            android:layout_height="@dimen/size_32"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_15"
                            android:layout_marginBottom="@dimen/size_15"
                            android:background="@drawable/shape_signup_load_more"
                            android:gravity="center"
                            android:text="查看更多"
                            android:textColor="#FFE8541E"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_activity_team_detail_nodata_hint"
                            android:layout_width="@dimen/size_112"
                            android:layout_height="@dimen/size_32"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_15"
                            android:layout_marginBottom="@dimen/size_15"
                            android:gravity="center"
                            android:text="暂无数据～"
                            android:visibility="gone"
                            android:textColor="@color/color_font_gray_lite"
                            android:textSize="@dimen/font_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_team_detail_album"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            android:layout_marginLeft="@dimen/size_14"
                            android:layout_marginRight="@dimen/size_14"
                            android:background="@color/color_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_22"
                            android:layout_marginTop="@dimen/size_13"
                            android:layout_marginBottom="@dimen/size_15"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/size_14"
                            android:paddingRight="@dimen/size_14"
                            android:text="战队相册"
                            android:textColor="#FF101010"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_detail_album"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_117"
                            android:layout_marginBottom="@dimen/size_13"
                            android:overScrollMode="never"
                            android:paddingLeft="@dimen/size_14"
                            android:paddingRight="@dimen/size_14">

                        </android.support.v7.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            android:layout_marginLeft="@dimen/size_14"
                            android:layout_marginRight="@dimen/size_14"
                            android:background="@color/color_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_team_detail_dynamic"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_22"
                            android:layout_marginTop="@dimen/size_13"
                            android:layout_marginBottom="@dimen/size_15"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/size_14"
                            android:paddingRight="@dimen/size_14"
                            android:text="战队动态"
                            android:textColor="#FF101010"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_team_detail_dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/size_14"
                            android:paddingRight="@dimen/size_14">

                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>

                    <RelativeLayout
                        android:background="#FFFAFAFA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/size_112"
                            android:layout_height="@dimen/size_40"
                             android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/size_10"
                            android:layout_marginBottom="@dimen/size_20"
                            android:background="@drawable/icon_bottom_logo" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_activity_team_detail_bottom"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/color_white"
        android:layout_height="@dimen/size_49">

        <LinearLayout
            android:id="@+id/ll_activity_team_detail_share"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_3"
                android:background="@drawable/icon_battle_detail_share" />

            <TextView
                android:id="@+id/tv_activity_team_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="分享"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_11" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_team_detail_customer_service"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_26"
                android:layout_height="@dimen/size_26"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_2"
                android:background="@drawable/icon_customer_service" />

            <TextView
                android:id="@+id/tv_activity_team_detail_customer_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="客服"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_activity_team_detail_signup"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_team_detail_package"
            android:gravity="center"
            android:text="报名战队"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_activity_team_detail_address"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_team_detail_welfare"
            android:gravity="center"
            android:text="福利领取"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_activity_team_detail_package"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_team_detail_package"
            android:gravity="center"
            android:text="升级套餐"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

</LinearLayout>