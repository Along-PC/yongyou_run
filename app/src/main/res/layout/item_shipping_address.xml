<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_39">

        <TextView
            android:id="@+id/tv_item_shipping_address_packageName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_39"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_14"
            android:text="--规格"
            android:textColor="@color/color_font_dynamic_name"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_item_shipping_address_size"
            android:text="查看尺码 >"
            android:textColor="#FFFF5536"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_14"
            android:layout_marginRight="@dimen/size_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5"
        android:background="@drawable/icon_ribbon_blue" />

    <LinearLayout
        android:id="@+id/ll_item_shipping_address_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:layout_marginTop="@dimen/size_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="性别"
            android:textColor="@color/color_font_dynamic_name"
            android:textSize="@dimen/font_14" />

        <RadioGroup
            android:id="@+id/rg_item_shipping_address_sex"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size_14"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_item_shipping_address_man"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sex"
                android:button="@null"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/selector_sex_font"
                android:textSize="@dimen/font_14" />

            <RadioButton
                android:id="@+id/rb_item_shipping_address_woman"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_sex"
                android:button="@null"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/selector_sex_font"
                android:textSize="@dimen/font_14" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_17"
        android:gravity="center_vertical"
        android:text="规格"
        android:textColor="@color/color_font_dynamic_name"
        android:textSize="@dimen/font_14" />

    <com.tourye.run.views.MeasureGridView
        android:id="@+id/grid_item_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_20"
        android:horizontalSpacing="@dimen/size_10"
        android:numColumns="5"
        android:verticalSpacing="@dimen/size_10">

    </com.tourye.run.views.MeasureGridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="#FFF5F5F5" />

</LinearLayout>