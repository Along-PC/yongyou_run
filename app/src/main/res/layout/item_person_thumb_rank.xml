<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70">

        <ImageView
            android:id="@+id/img_item_person_thumb_rank_position"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_person_thumb_rank_position"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_font_black"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_10"
            android:text="-"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25" />

        <ImageView
            android:id="@+id/img_item_person_thumb_rank_head"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_width="@dimen/size_50"
            android:scaleType="fitXY"
            android:layout_height="@dimen/size_50" />

        <LinearLayout
            android:layout_marginRight="@dimen/size_10"
            android:layout_toRightOf="@+id/img_item_person_thumb_rank_head"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/tv_item_person_thumb_rank_count"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_person_thumb_rank_name"
                android:textColor="@color/color_font_black"
                android:textSize="@dimen/font_16"
                android:text="--"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20" />
            <TextView
                android:id="@+id/tv_item_person_thumb_rank_describe"
                android:textColor="@color/color_font_gray"
                android:textSize="@dimen/font_12"
                android:gravity="center_vertical"
                android:text="第100+名"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_17" />

        </LinearLayout>

        <TextView
            android:text="---"
            android:id="@+id/tv_item_person_thumb_rank_count"
            android:textSize="@dimen/font_18"
            android:layout_marginRight="@dimen/size_14"
            android:textColor="@color/color_font_black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/view_item_person_thumb_rank_line"
        android:background="@color/color_line_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

    <View
        android:id="@+id/view_item_person_thumb_rank_separation"
        android:background="@color/color_line_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"/>

</LinearLayout>