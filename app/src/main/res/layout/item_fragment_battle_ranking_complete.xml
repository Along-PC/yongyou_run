<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70">

        <ImageView
            android:id="@+id/img_battle_ranking_complete_position"
            android:layout_marginLeft="@dimen/size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_battle_ranking_complete_position"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_12" />

        <ImageView
            android:id="@+id/img_battle_ranking_complete_head"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_marginRight="@dimen/size_10"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_battle_ranking_complete_name"
            style="@style/commonFont"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_22"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/size_14"
            android:layout_toLeftOf="@+id/tv_battle_ranking_complete_rate"
            android:layout_marginRight="@dimen/size_10"
            android:layout_toRightOf="@+id/img_battle_ranking_complete_head"
            android:text="-----" />

        <TextView
            android:id="@+id/tv_battle_ranking_complete_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_17"
            android:layout_below="@+id/tv_battle_ranking_complete_name"
            android:layout_toRightOf="@+id/img_battle_ranking_complete_head"
            android:gravity="center_vertical"
            android:text="--人·----公里"
            android:textColor="@color/color_font_gray"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_battle_ranking_complete_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_14"
            android:text="--%"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>

    <View
        android:id="@+id/view_battle_ranking_complete_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_line_weight" />

    <View
        android:id="@+id/view_battle_ranking_complete_separation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/color_line_weight" />

</LinearLayout>