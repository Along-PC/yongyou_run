                    android:layout_marginTop="@dimen/size_14"
                    android:layout_marginRight="@dimen/size_10">

                    <ImageView
                        android:id="@+id/img_activity_team_manage_setting"
                        android:layout_width="@dimen/size_18"
                        android:layout_height="@dimen/size_18"
