                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_activity_team_manage_punch_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_17"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_130"
                            android:drawableRight="@drawable/icon_arrow_punch_right"
                            android:gravity="center"
                            android:text="打卡明细"
                            android:textColor="#4A90E2"
                            android:textSize="@dimen/font_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_70"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/size_20">

                            <LinearLayout
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_team_manage_unpunch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_40"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="未打卡"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_team_manage_tocheck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_40"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="待审核"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_team_manage_nopass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_40"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="审核未通过"
                                    android:textColor="@color/color_font_black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/ll_activity_team_manage_visit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginLeft="@dimen/size_14"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_14"
                    android:layout_marginBottom="@dimen/size_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="访客量"
                        android:textColor="@color/color_font_team_manage"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:background="@drawable/icon_arrow_right" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_activity_team_manage_visitCount"
