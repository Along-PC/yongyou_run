                            android:textSize="@dimen/font_14" />

                        <ImageView
                            android:layout_width="@dimen/size_16"
                            android:layout_height="@dimen/size_16"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_2"
                            android:background="@drawable/icon_arrow_punch_bottom" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_activity_team_manage_punch_hint"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:gravity="center"
                        android:text="超出队长管理时限，无法查看"
                        android:textColor="@color/color_font_gray_lite"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl_activity_team_manage_punch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_300">

                        <com.tourye.run.views.RingView
                            android:id="@+id/ring_activity_team_manage"
