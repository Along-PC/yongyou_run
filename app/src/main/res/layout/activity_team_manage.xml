                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_20"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_46"
                            android:gravity="center"
                            android:text="打卡成功/队伍人数"
