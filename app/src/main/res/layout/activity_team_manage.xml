                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_activity_team_manage_cutoff"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_20"
