<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60">

    <TextView
        android:id="@+id/tv_item_already_effective_title"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_10"
        android:text="战队满百的奖励"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20" />

    <TextView
        android:id="@+id/tv_item_already_effective_label"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_font_gray_lite"
        android:text="第10届 魅力战队"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_32"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_17" />

    <TextView
        android:id="@+id/tv_item_already_effective_money"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_14"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_14"
        android:text="¥*00.00 "
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_14"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />

    <View
        android:background="#f2f2f2"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

</RelativeLayout>